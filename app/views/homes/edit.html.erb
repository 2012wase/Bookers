<h1>Editing Book</h1>
<%= form_with model:@book, url:"/todolists/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  <td>
    <a class= "show_17251" href= "/books/17251">Show</a>
　</td>
　<td>
　　<a class= "edit_17251" href= "/books/17251/edit">Edit</a>
　</td>
<% end %>